import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

from sklearn.decomposition import PCA
from sklearn.datasets import make_blobs

np.random.seed(42)

def scatter2d(ax, X, title="", color=None):
    ax.scatter(X[:,0], X[:,1], s=20, alpha=0.75, edgecolor='none', c=color)
    ax.axhline(0, color='gray', linewidth=0.5)
    ax.axvline(0, color='gray', linewidth=0.5)
    ax.set_aspect('equal', 'box')
    ax.set_title(title)
    ax.grid(True, alpha=0.2)

def scatter3d(ax, X, title="", color=None):
    ax.scatter(X[:,0], X[:,1], X[:,2], s=8, alpha=0.7, c=color, depthshade=True)
    ax.set_title(title)
    ax.grid(True, alpha=0.2)

def plot_vectors2d(origin, vecs, ax, color='black', labels=None, scale=1.0):
    ox, oy = origin
    for i, v in enumerate(vecs):
        ax.arrow(ox, oy, v[0]*scale, v[1]*scale, head_width=0.15, length_includes_head=True, color=color, alpha=0.9)
        if labels:
            ax.text(ox + v[0]*scale*1.05, oy + v[1]*scale*1.05, labels[i], color=color, fontsize=11)

def plot_vectors3d(origin, vecs, ax, color='black', labels=None, scale=1.0):
    ox, oy, oz = origin
    for i, v in enumerate(vecs):
        ax.quiver(ox, oy, oz, v[0]*scale, v[1]*scale, v[2]*scale, length=1.0, normalize=False, color=color)
        if labels:
            ax.text(ox + v[0]*scale*1.05, oy + v[1]*scale*1.05, oz + v[2]*scale*1.05, labels[i], color=color, fontsize=10)
            # === Choose a dataset by setting DATASET to one of:
# 2D: '2d_correlated', '2d_blobs'
# 3D: '3d_correlated', '3d_blobs'
DATASET = '3d_correlated'

N = 400

if DATASET == '2d_correlated':
    mean = np.array([0, 0])
    cov = np.array([[4.0, 3.0],[3.0, 3.5]])
    X = np.random.multivariate_normal(mean, cov, size=N)

elif DATASET == '2d_blobs':
    X, y = make_blobs(n_samples=N, centers=3, cluster_std=[1.0, 1.6, 0.8], random_state=42)

elif DATASET == '3d_correlated':
    mean = np.zeros(3)
    cov = np.array([[5.0, 3.2, 1.5],
                    [3.2, 4.0, 1.2],
                    [1.5, 1.2, 2.5]])
    X = np.random.multivariate_normal(mean, cov, size=N)

elif DATASET == '3d_blobs':
    X, y = make_blobs(n_samples=N, centers=4, n_features=3, cluster_std=[1.0, 1.2, 1.5, 0.8], random_state=42)

else:
    raise ValueError("Unknown DATASET")

X = X.astype(float)
DIM = X.shape[1]
print("Data shape:", X.shape, "| Dimensionality:", DIM)
X[:5]
mu = np.array([np.mean(X,axis=0)])
print(f'Mean Vector (mu): \n{mu}\n')

# Center the data
X_mean = X - mu
print('X_mean =\n',X_mean[:5])

print(f'Mean Vector of X_mean: \n{np.mean(X_mean,axis=0)}')

C = np.cov(X_mean, rowvar=False)
print('C =\n',C)
if DIM == 2:
    fig, ax = plt.subplots(figsize=(5,5))
    scatter2d(ax, X_mean, title="Processed data (2D)")
    plt.show()
elif DIM == 3:
    fig = plt.figure(figsize=(6,5))
    ax = fig.add_subplot(111, projection='3d')
    scatter3d(ax, X_mean, title="Processed data (3D)")
    plt.show()
    C = np.cov(X_mean, rowvar=False, ddof=1)
vals, vecs = np.linalg.eig(C)         # ascending
idx = np.argsort(vals)[::-1]          # descending
vals = vals[idx]
vecs = vecs[:, idx]

print("Covariance matrix:\n", np.round(C, 3))
print("Eigenvalues:", np.round(vals, 3))
print("Explained variance ratio:", np.round(vals/vals.sum(), 4))

if DIM == 2:
    fig, ax = plt.subplots(figsize=(5,5))
    scatter2d(ax, X_mean, title="Data with Principal Axes (2D)")
    scales = np.sqrt(vals)
    plot_vectors2d(origin=(0,0),
                   vecs=[vecs[:,0], vecs[:,1]],
                   ax=ax, color='crimson',
                   labels=[f'PC1 (λ={vals[0]:.2f})', f'PC2 (λ={vals[1]:.2f})'],
                   scale=scales[0]*0.8)
    plt.show()
elif DIM == 3:
    fig = plt.figure(figsize=(6,5))
    ax = fig.add_subplot(111, projection='3d')
    scatter3d(ax, X_mean, title="Data with Principal Axes (3D)")
    scales = np.sqrt(vals)
    plot_vectors3d(origin=(0,0,0),
                   vecs=[vecs[:,0], vecs[:,1], vecs[:,2]],
                   ax=ax, color='crimson',
                   labels=[f'PC1 (λ={vals[0]:.2f})', f'PC2 (λ={vals[1]:.2f})', f'PC3 (λ={vals[2]:.2f})'],
                   scale=scales[0]*0.6)
    plt.show()
 Project to PC space and reconstruct from k=1,2
Z = X_mean @ vecs

if DIM == 2:
    fig, ax = plt.subplots(figsize=(5,5))
    scatter2d(ax, Z, title="PC Coordinates (2D)")
    ax.set_xlabel("PC1"); ax.set_ylabel("PC2")
    plt.show()
elif DIM == 3:
    # 2D views of scores
    fig, ax = plt.subplots(figsize=(5,5))
    ax.scatter(Z[:,0], Z[:,1], s=10, alpha=0.7)
    ax.set_title("PC Scores: PC1 vs PC2")
    ax.set_xlabel("PC1"); ax.set_ylabel("PC2")
    ax.grid(True, alpha=0.2)
    plt.show()

    fig, ax = plt.subplots(figsize=(5,5))
    ax.scatter(Z[:,0], Z[:,2], s=10, alpha=0.7)
    ax.set_title("PC Scores: PC1 vs PC3")
    ax.set_xlabel("PC1"); ax.set_ylabel("PC3")
    ax.grid(True, alpha=0.2)
    plt.show()

# Reconstructions
for k in [1, 2]:
    k_eff = min(k, vecs.shape[1])
    Z_k = np.zeros_like(Z); Z_k[:, :k_eff] = Z[:, :k_eff]
    X_back_proj = Z_k @ vecs.T
    # Map back to original coordinates
    X_rec_original = X_back_proj + mu

    if DIM == 2:
        fig, axes = plt.subplots(1, 2, figsize=(10,4))
        scatter2d(axes[0], X_mean, title="Processed")
        scatter2d(axes[1], X_back_proj, title=f"Reconstruction k={k_eff} (processed)")
        plt.show()
    elif DIM == 3:
        fig = plt.figure(figsize=(12,5))
        ax1 = fig.add_subplot(121, projection='3d')
        scatter3d(ax1, X_mean, title="Processed (3D)")

        ax2 = fig.add_subplot(122, projection='3d')
        scatter3d(ax2, X_back_proj, title=f"Reconstruction k={k_eff} (processed)")
        plt.show()

