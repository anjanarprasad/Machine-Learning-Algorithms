# (Optional) set a global seed for reproducibility
GLOBAL_SEED = 123
random.seed(GLOBAL_SEED)

Board = List[int]   # board[c] = row of queen in column c
N = 8               # board size

def random_board(n: int = N) -> Board:
    #Returns a list of length n; each column gets exactly one queen placed in a random row
    return [random.randrange(n) for _ in range(n)]

def conflicts(board: Board, c1: int, c2: int) -> bool: #Checks if queens in columns c1 and c2 attack each other:
    """Whether queens in columns c1 and c2 attack each other."""
    r1, r2 = board[c1], board[c2]
    return (r1 == r2) or (abs(r1 - r2) == abs(c1 - c2))

def heuristic(board: Board) -> int:#Counts the number of attacking pairs (lower is better; 0 means a solution).
#It loops over all unordered column pairs (c1 < c2) and sums conflicts(...).
    """
    h(s) = number of attacking pairs of queens.
    Lower is better; 0 means solved.
    """
    n, h = len(board), 0 ## n is how many queens/columns there are; h starts at 0 to count conflicts
    for c1 in range(n): # pick the first queen's column (c1), from 0 to n-1
        for c2 in range(c1 + 1, n):# pick the second queen's column (c2), only those to the right of c1 to avoid repeats
            if conflicts(board, c1, c2):# check if the two queens attack each other (same row or same diagonal)
                h += 1 # if they do, add 1 to the conflict count
    return h

def board_to_ascii(board: Board) -> str:
    """ASCII chessboard: 'Q' for queens, '.' for empty squares."""
    n = len(board)# n = board size (number of rows/columns)
    lines = []## will collect each row as a text line
    for r in range(n):## go row by row, from top (0) to bottom (n-1)
        lines.append(" ".join("Q" if board[c] == r else "." for c in range(n)))# build one row: for each column c, put 'Q' if the queen is at row r, else '.'
    return "\n".join(lines)# join all rows with newlines into one string
def best_neighbor(board: Board) -> Tuple[Board, int]:
    """
    Generate the full neighborhood by moving ONE queen to another row in its column.
    Return one of the best neighbors (lowest heuristic), tie broken randomly.
    If no better neighbor exists, returns (original_board, original_h).
    """
    n = len(board)# board size (columns/rows)
    current_h = heuristic(board)# heuristic of the current board

    best_h = math.inf# best (lowest) heuristic seen so far
    bests: List[Board] = []# all neighbors that tie for best_h

    for c in range(n): # pick a column to move its queen
        r0 = board[c] # current row of the queen in column c
        for r in range(n):# try placing that queen in every row
            if r == r0: # skip if it's the same row (no change)
                continue
            nb = board.copy()# copy the board to make a neighbor
            nb[c] = r# move the queen in column c to row r
            h = heuristic(nb)# compute conflicts for this neighbor

            if h < best_h:## found a strictly better score
                best_h = h
                bests = [nb]## start a new list of best neighbors
            elif h == best_h:## ties: keep all equally good neighbors
                bests.append(nb)

    if not bests:# no neighbor improved anything
        return board[:], current_h # return original state and score
    return random.choice(bests), best_h# break ties randomly among best
# @title Hill Climbing & Random-Restart Hill Climbing

@dataclass
class HCResult:
    final_board: Board # the board you ended up with
    final_h: int # its conflict score (0 means solved)
    steps: int # how many moves (iterations) were taken
    solved: bool# True if final_h == 0
    seconds: float # how long the run took in seconds

def hill_climb(initial: Board, max_steps: int = 10_000) -> HCResult:
    """
    Steepest-ascent hill climbing from an initial state.
    Stops when no improving neighbor exists (local minimum/plateau),
    or when h == 0 (solution).
    """
    t0 = time.time()# start a timer
    board = initial[:]# work on a copy of the initial board
    h = heuristic(board)# current conflict count
    steps = 0# step counter

    for _ in range(max_steps):# try up to max_steps moves
        steps += 1
        nb, nb_h = best_neighbor(board)# best neighbor and its score
        if nb_h >= h:# no improvement (plateau/local minimum)
            return HCResult(board, h, steps, h == 0, time.time() - t0)
        board, h = nb, nb_h# move to the better neighbor
        if h == 0:# solution found
            return HCResult(board, h, steps, True, time.time() - t0)
# ran out of steps; return where we are
    return HCResult(board, h, steps, h == 0, time.time() - t0)

@dataclass
class RRResult:
    solved: bool# True if any restart found a solution
    solution: Optional[Board]# the solved board, or None if not found
    restarts: int# how many restarts were used
    total_steps: int# sum of all hill-climb steps across restarts
    steps_last_restart: int## steps taken in the most recent attempt
    seconds: float# total time for all attempts

def random_restart_hill_climb(
    max_restarts: int = 10_000,
    max_steps_per_restart: int = 10_000,
    seed: Optional[int] = None
) -> RRResult:
    """
    Hill Climbing with Random Restarts:
      Repeat: random init -> hill climb -> stop if solved else restart.
    Returns the first solution and overall stats.
    """
    if seed is not None:
        random.seed(seed)

    t0 = time.time()# start total timer
    restarts = 0
    total_steps = 0
    steps_last = 0

    while restarts <= max_restarts:
        start = random_board()# new random start
        hc = hill_climb(start, max_steps=max_steps_per_restart)# climb from it
        total_steps += hc.steps
        steps_last = hc.steps
        if hc.solved:# success
            return RRResult(True, hc.final_board, restarts, total_steps, steps_last, time.time() - t0)
        restarts += 1# try again
# no solution within the restart budget
    return RRResult(False, None, restarts, total_steps, steps_last, time.time() - t0)
from typing import Optional, List, Tuple
import random, time

Board = List[int]

def min_conflicts(
    n: int = 8,
    max_steps: int = 10_000,
    seed: Optional[int] = None
) -> Tuple[Board, bool, int, float]:
    """
    Min-Conflicts for N-Queens.
    Returns (board, solved_flag, steps_taken, seconds).
    """
    if seed is not None:
        random.seed(seed)

    t0 = time.time()
    board = [random.randrange(n) for _ in range(n)]

    # O(1) conflict scoring
    row = [0]*n
    d1  = [0]*(2*n - 1)  # r - c  shifted by (n-1)
    d2  = [0]*(2*n - 1)  # r + c
    idx1 = lambda r, c: r - c + (n - 1)
    idx2 = lambda r, c: r + c

    for c, r in enumerate(board):
        row[r] += 1
        d1[idx1(r, c)] += 1
        d2[idx2(r, c)] += 1

    def conflicted_cols() -> List[int]:
        bad = []
        for c, r in enumerate(board):
            if row[r] > 1 or d1[idx1(r, c)] > 1 or d2[idx2(r, c)] > 1:
                bad.append(c)
        return bad

    for step in range(1, max_steps + 1):
        bad = conflicted_cols()
        if not bad:
            return board, True, step, time.time() - t0

        c = random.choice(bad)
        r0 = board[c]

        # remove temporarily
        row[r0] -= 1
        d1[idx1(r0, c)] -= 1
        d2[idx2(r0, c)] -= 1

        best_rows, best = [], None
        for r in range(n):
            cost = row[r] + d1[idx1(r, c)] + d2[idx2(r, c)]
            if best is None or cost < best:
                best, best_rows = cost, [r]
            elif cost == best:
                best_rows.append(r)

        r_new = random.choice(best_rows)
        board[c] = r_new

        # re-add at new position
        row[r_new] += 1
        d1[idx1(r_new, c)] += 1
        d2[idx2(r_new, c)] += 1

    return board, False, max_steps, time.time() - t0

